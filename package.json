{
  "name": "fast-tiny-midway",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.6.2",
  "description": "一个基于 MidwayJS 的轻量级全栈快速开发模板",
  "author": "anonymous",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/liangjiayu/fast-tiny-midway"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "prepare": "husky",
    "plop": "plop",
    "dev": "cross-env NODE_ENV=local mwtsc --watch --run @midwayjs/mock/app.js",
    "build": "mwtsc --cleanOutDir",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "start": "NODE_ENV=production node ./bootstrap.js",
    "start:server": "pm2-runtime start ecosystem.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 delete ecosystem.config.js && pm2 cleardump",
    "docker:build": "docker compose build",
    "docker:up": "docker compose --env-file .env up -d",
    "docker:down": "docker compose down"
  },
  "dependencies": {
    "@midwayjs/axios": "3",
    "@midwayjs/bootstrap": "^3.12.0",
    "@midwayjs/core": "^3.12.0",
    "@midwayjs/info": "^3.12.0",
    "@midwayjs/koa": "^3.12.0",
    "@midwayjs/logger": "^3.1.0",
    "@midwayjs/swagger": "3",
    "@midwayjs/typeorm": "3",
    "@midwayjs/validate": "^3.20.2",
    "cross-env": "^6.0.0",
    "dotenv": "^16.4.7",
    "mysql2": "^3.12.0",
    "swagger-ui-dist": "^5.20.0",
    "typeorm": "^0.3.20",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.8.1",
    "@midwayjs/mock": "^3.12.0",
    "@types/jest": "^29.2.0",
    "@types/node": "22",
    "eslint": "^9.22.0",
    "husky": "^9.1.7",
    "jest": "^29.2.2",
    "lint-staged": "^15.4.3",
    "mwts": "^1.3.0",
    "mwtsc": "^1.4.0",
    "plop": "^4.0.1",
    "ts-jest": "^29.0.3",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
