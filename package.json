{
  "name": "react-admin-vite-bff",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "description": "基于 midwayjs 框架的BFF服务",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/liangjiayu/react-admin-vite-bff"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "cross-env NODE_ENV=local mwtsc --watch --run @midwayjs/mock/app.js",
    "build": "mwtsc --cleanOutDir",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "start": "NODE_ENV=production node ./bootstrap.js",
    "start:server": "pm2-runtime start ecosystem.config.js",
    "docker:build": "docker compose build",
    "docker:up": "docker compose --env-file .env up -d",
    "docker:down": "docker compose down"
  },
  "dependencies": {
    "@midwayjs/axios": "3",
    "@midwayjs/bootstrap": "^3.12.0",
    "@midwayjs/core": "^3.12.0",
    "@midwayjs/http-proxy": "3",
    "@midwayjs/info": "^3.12.0",
    "@midwayjs/koa": "^3.12.0",
    "@midwayjs/logger": "^3.1.0",
    "cross-env": "^6.0.0",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.8.1",
    "@midwayjs/mock": "^3.12.0",
    "@types/node": "22",
    "eslint": "^9.22.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "mwts": "^1.3.0",
    "mwtsc": "^1.4.0",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
